	</bean>

	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="sqlSessionFactoryBeanName" value="accountSqlSessionFactory" />
		<property name="basePackage" value="com.dao.UserMapper"/>
	</bean>

</beans>