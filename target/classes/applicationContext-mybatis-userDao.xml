<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="accountDataSource"
		class="org.apache.ibatis.datasource.pooled.PooledDataSource">
	 	<property name="driver" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://rm-bp109821q935rjiyn2o.mysql.rds.aliyuncs.com:3306/bigdata" />
		<property name="username" value="admin666" />
		<property name="password" value="88888888" />
		
		<property name="poolMaximumActiveConnections" value="50" />
	   	<property name="poolTimeToWait" value="5000" />
	   	<property name="poolPingEnabled" value="true"/>
	   	<property name="poolPingQuery" value="select 1" />
